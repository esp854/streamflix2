# Database configuration - This will be overridden by Railway if you use their PostgreSQL service
DATABASE_URL=postgresql://your_railway_postgres_url

# JWT Secret for authentication (generate a secure random string)
JWT_SECRET=your_secure_jwt_secret_here

# TMDB API Key (optional, for movie data)
TMDB_API_KEY=your_tmdb_api_key

# Lygos API Key (provided by Lygos)
LYGOS_API_KEY=your_lygos_api_key

# Lygos API Base URL
LYGOS_API_BASE_URL=https://api.lygosapp.com/v1/

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Email Configuration
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Client URL (for redirects) - Will be overridden by Railway
CLIENT_URL=https://your-app-production.up.railway.app

# Base URL (for webhooks) - Will be overridden by Railway
BASE_URL=https://your-app-production.up.railway.app

# Port configuration - Will be overridden by Railway
PORT=3000

# Node environment
NODE_ENV=production