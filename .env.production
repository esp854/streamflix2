# Database configuration for production
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# JWT Secret for authentication (change in production)
JWT_SECRET=your_production_secret_key_here

# TMDB API Key (optional, for movie data)
TMDB_API_KEY=your_production_tmdb_api_key_here

# Lygos API Key
LYGOS_API_KEY=your_production_lygos_api_key_here

# Lygos API Base URL
LYGOS_API_BASE_URL=https://api.lygosapp.com/v1/

# PayPal Configuration
PAYPAL_CLIENT_ID=your_production_paypal_client_id
PAYPAL_CLIENT_SECRET=your_production_paypal_client_secret
PAYPAL_MODE=live

# Email Configuration
EMAIL_USER=your_production_email@gmail.com
EMAIL_PASS=your_production_email_app_password

# Client URL (for redirects)
CLIENT_URL=https://your-streamflix-app.vercel.app

# Base URL (for webhooks)
BASE_URL=https://your-streamflix-app.vercel.app

# Port configuration
PORT=3000